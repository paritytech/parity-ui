{
  "name": "parity-web-ui",
  "version": "0.1.0",
  "description": "System UI for Parity dapp browser",
  "main": "client/index.js",
  "scripts": {
    "install": "napa alexvandesande/blockies",
    "start": "webpack-dev-server -d --history-api-fallback --hot --inline --progress --colors --port 3010",
    "webpack": "webpack",
    "commit": "commit-wizard",
    "lint": "semistandard",
    "ci": "npm run lint && npm run testOnce",
    "test": "npm run testOnce -- -w",
    "testOnce": "mocha --compilers js:babel-core/register 'client/**/*.spec.js'",
    "startTest": "NODE_ENV=tests npm start",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production webpack --progress --colors",
    "buildStatic": "RPC_ADDRESS=http://localhost:8545 NODE_ENV=production webpack --progress --colors",
    "clean": "rm static -rf"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-eslint": "6.0.2",
    "babel-loader": "^6.2.3",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.5.0",
    "chai": "3.5.0",
    "css-loader": "^0.23.1",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mock-local-storage": "1.0.2",
    "napa": "^2.3.0",
    "nightwatch": "0.8.18",
    "postcss-loader": "^0.8.1",
    "pre-git": "^3.8.1",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-hot-loader": "^1.3.0",
    "react-router": "^2.0.0",
    "rucksack-css": "^0.8.5",
    "semistandard": "^7.0.5",
    "sinon": "1.17.3",
    "sinon-chai": "2.8.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.7.1"
  },
  "dependencies": {
    "bignumber.js": "2.3.0",
    "classnames": "^2.2.3",
    "exports-loader": "^0.6.3",
    "lodash.isequal": "^4.2.0",
    "material-ui": "0.15.0",
    "react-copy-to-clipboard": "^4.1.0",
    "react-tap-event-plugin": "^1.0.0",
    "web3": "^0.15.3"
  },
  "semistandard": {
    "parser": "babel-eslint"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "./scripts/check-master.sh"
      ],
      "pre-push": [
        "npm run lint",
        "npm run testOnce"
      ],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
}
